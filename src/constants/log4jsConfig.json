{
  "appenders": {
    "miLoggerConsole": { "type": "console" },
    "miLoggerFile": {
      "type": "file",
      "filename": "info.log",
      "pattern": "-yyyy-MM-dd"
    }
  },
  "categories": {
    "default": {
      "appenders": ["miLoggerConsole"],
      "level": "trace"
    },
    "consola": {
      "appenders": ["miLoggerConsole"],
      "level": "debug"
    },
    "archivo": {
      "appenders": ["miLoggerFile"],
      "level": "warn"
    },
    "todos": {
      "appenders": ["miLoggerConsole", "miLoggerFile"],
      "level": "error"
    }
  }
}
